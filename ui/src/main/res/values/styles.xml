<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="news_feed_social_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:hapticFeedbackEnabled">true</item>
    </style>

    <style name="profile_item_widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:backgroundTint">#D0596C8D</item>
    </style>

    <style name="profile_item_widget_icon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="profile_item_widget_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">58dp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">#E1F5FE</item>
    </style>

    <style name="profile_photo_container">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:backgroundTint">#E1F5FE</item>
        <item name="android:elevation">16dp</item>
    </style>

    <style name="profile_username_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textColor">#454544</item>
    </style>

    <style name="new_wall_post_edittext_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:background">@drawable/add_comment_bg</item>
        <item name="android:drawableEnd">@drawable/ic_send_24</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
</resources>